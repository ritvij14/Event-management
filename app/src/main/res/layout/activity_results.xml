                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/category_two_second_place_winner"
                    android:text="@string/harsh_nigam"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/category_two_second_place_prize"
                    android:text="@string/rs_750"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_place"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="22dp"
                android:layout_marginStart="37dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="75dp"
                android:paddingEnd="50dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/category_two_third_place_winner"
                    android:text="@string/ritviz"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/category_two_third_place_prize"
                    android:text="@string/rs_500"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trophy_results"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>
</LinearLayout>